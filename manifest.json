{
  "manifest_version": 3,
  "name": "Hackathon Project",
  "version": "1.0.1",
  "description": "Our Description will go here.",
  "permissions": [
    "activeTab",
    "webRequest",
    "webNavigation",
    "scripting",
    "storage"
  ],
  "background": { "service_worker": "scripts/background.js" },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://*/*", "http://*/*"],
      "css": ["scripts/content.css"]
    }
  ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Dogs & Cats",
    "default_icon": {
      "16": "assets/catemoj-16.png",
      "32": "assets/catemoj-32.png",
      "48": "assets/catemoj-48.png",
      "128": "assets/catemoj-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["cat_sound.wav"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
